@using Newtonsoft.Json;
@using StoreApp_Core.DTOs;
@using System.Text;
@model ICollection<ProviderDTO>

@{
    ViewData["Title"] = "Магазины";
    Layout = "_layout";
}

<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>

<h2 class="text-center">Магазины</h2>
<div>
    @if (Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Название
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <a class="btn btn-outline-secondary" asp-controller="Providers" asp-action="EditProviderPartialView"
                               asp-route-id="@item.Id"
                               asp-route-number="@item.Name">Редактировать</a>
                        </td>
                        <td>
                            <a class="btn btn-outline-danger" asp-controller="Providers" asp-action="DeleteProviderPartialView">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class=" mb-1">Магазины отсутствуют</p>
    }
    <p>
        <a class="btn btn-outline-success" asp-controller="Providers" asp-action="CreateProvider">Добавить магазин</a>
    </p>
</div>


@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/js/modalWindow.js" asp-append-version="true"></script>
}
