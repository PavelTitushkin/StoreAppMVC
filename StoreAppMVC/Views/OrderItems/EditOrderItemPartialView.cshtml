@using StoreAppMVC.Models.OrderItems;
@model OrderItemModel;

<div class="modal-content">
    <div class="modal-header">
        <button class="btn-close" data-bs-dismiss="modal" area-hidden="true"></button>
    </div>
    <h4 class="text-center">Товар</h4>
    <div class="modal-body">
        <form asp-controller="OrderItems" asp-action="EditOrderItem" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="Name" class="form-label">Название:</label>
                <input asp-for="Name" type="text" class="form-control" id="Name" value="@Model.Name" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Quantity" class="form-label">Количество:</label>
                <input asp-for="Quantity" type="number" class="form-control" id="Quantity" value="@Model.Quantity" required />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Unit" class="form-label">Едениа измерения:</label>
                <input asp-for="Unit" type="text" class="form-control" id="Unit" value="@Model.Unit" required />
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
            <div>
                <input asp-for="Id" type="hidden" />
                <input asp-for="OrderId" type="hidden" />
            </div>
            <input type="submit" class="btn btn-primary m-1" value="Редактировать товар" />
            <a class="btn btn-primary m-1" role="button" asp-controller="OrderItems" asp-action="GetOrderItemsByFilter"
               asp-route-id="@Model.OrderId">Отмена</a>
        </form>
    </div>
</div>
